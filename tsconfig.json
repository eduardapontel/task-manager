{
    "compilerOptions": {
        "target": "ES2023",
        "lib": ["ES2023"],

        "paths": {
            "@/*": ["./src/*"]
        },

        "module": "nodenext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "strict": true,
        "skipLibCheck": true,
    },
}
